%h1 Sample#index

%div#main
  %div(data-bind="text: message")

  %div(data-bind="visible: isGeneratorFound")
    %div#canvas
    %div
      %button#submit OK

  %div(data-bind="with: result")
    %div#output(data-bind="foreach: files")
      .result-filename(data-bind="text: name")
      %pre(data-bind='text: content, attr: {class: highlight_class()}' contenteditable="true" )

:coffee
  $ ->
    GoodParts.ViewController.GenerateViewController
      main: 'main'
      canvas: 'canvas'
      submit: 'submit'
      output: 'output'
    .start()
    SyntaxHighlighter.all()